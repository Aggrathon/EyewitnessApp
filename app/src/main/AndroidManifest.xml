<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="aggrathon.eyewitnessapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="landscape">

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NotFullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".start.BackgroundInformationActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".experiment.LineupActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".experiment.QuestionsActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ResultActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".experiment.NumberActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.AgeActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.NrActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.ExperimentInformationActivity"
            android:screenOrientation="landscape"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".start.TutorialActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.TutorialActivity$TutorialNumbers"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.TutorialActivity$TutorialLineup"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.TutorialActivity$TutorialQuestions"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.TutorialActivity$TutorialEnd"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.TutorialActivity$TutorialWait"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.TutorialActivity$TutorialTargetQuestions"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".experiment.ShowActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".experiment.TargetQuestionsActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Small"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".start.VisualAcuityActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
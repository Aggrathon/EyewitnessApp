<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="aggrathon.eyewitnessapp.light">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="aggrathon.eyewitnessapp.light.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NotFullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="aggrathon.eyewitnessapp.light.start.BackgroundInformationActivity"
            android:parentActivityName="aggrathon.eyewitnessapp.light.MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="aggrathon.eyewitnessapp.light.experiment.LineupActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="aggrathon.eyewitnessapp.light.experiment.QuestionsActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="aggrathon.eyewitnessapp.light.experiment.NumberActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="aggrathon.eyewitnessapp.light.start.AgeActivity"
            android:parentActivityName="aggrathon.eyewitnessapp.light.MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="aggrathon.eyewitnessapp.light.start.ExperimentInformationActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="aggrathon.eyewitnessapp.light.MainActivity"/>
        </activity>
        <activity
            android:name="aggrathon.eyewitnessapp.light.start.InformationActivity"
            android:parentActivityName="aggrathon.eyewitnessapp.light.MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="aggrathon.eyewitnessapp.light.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="aggrathon.eyewitnessapp.light.MainActivity"
            android:theme="@style/AppTheme.Small">
        </activity>
    </application>

</manifest>
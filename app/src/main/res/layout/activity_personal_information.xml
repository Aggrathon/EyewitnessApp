<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aggrathon.eyewitnessapp.PersonalInformation"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/ageTitle"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/largeMargin"
        android:labelFor="@+id/ageField"
        android:text="@string/ageTitle"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <EditText
        android:id="@+id/ageField"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@+id/ageTitle"
        android:layout_marginRight="@dimen/margin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <Space
        android:id="@+id/space1"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@+id/ageField"
        android:layout_marginLeft="@dimen/margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/margin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <TextView
        android:id="@+id/sexTitle"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:labelFor="@+id/sexLayout"
        android:text="@string/sextitle"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space1"
        android:layout_marginStart="@dimen/margin"/>

    <RadioGroup
        android:id="@+id/sexRadioGroup"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/sexOther"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@+id/sexTitle"
        android:layout_marginRight="@dimen/margin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin">

        <RadioButton
            android:id="@+id/sexMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="@string/sexMan"/>

        <RadioButton
            android:id="@+id/sexWoman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="@string/sexWoman"/>

        <RadioButton
            android:id="@+id/sexOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/sexOther"/>
    </RadioGroup>

    <Space
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexRadioGroup"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <TextView
        android:id="@+id/natTitle"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:labelFor="@+id/natField"
        android:text="@string/natTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <EditText
        android:id="@+id/natField"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:ems="10"
        android:inputType="text|textAutoComplete"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/natTitle"
        android:layout_marginRight="@dimen/margin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <Space
        android:id="@+id/space3"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@+id/natField"
        android:layout_marginRight="@dimen/margin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <TextView
        android:id="@+id/childTitle"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:labelFor="@+id/childLayout"
        android:text="@string/childTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space3"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"/>

    <RadioGroup
        android:id="@+id/childRadioGroup"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:checkedButton="@+id/childOther"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childTitle"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin">

        <RadioButton
            android:id="@+id/childFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="@string/childFin"/>

        <RadioButton
            android:id="@+id/childOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="@string/childOther"/>

    </RadioGroup>

    <Button
        android:id="@+id/startButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_weight="1"
        android:onClick="onStartButton"
        android:text="@string/startButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>

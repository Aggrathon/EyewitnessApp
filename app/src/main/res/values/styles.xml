<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:textAppearanceSmall">@style/AppTheme.Text</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>
        <item name="spinnerStyle">@style/AppTheme.Spinner</item>
        <item name="android:immersive">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.CenterTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textButtonColored</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.NotFullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:immersive">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:minHeight">@dimen/buttonHeight</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="AppTheme.Button.Color" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textButtonColored</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="AppTheme.Text" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textSmall</item>
        <item name="android:lineSpacingExtra">@dimen/textVerticalSpacing</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:elevation">@dimen/panelElevation</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textSmall</item>
    </style>

    <style name="AppTheme.Panel">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:elevation">@dimen/panelElevation</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="AppTheme.ImageButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:elevation">@dimen/panelElevation</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="AppTheme.Background">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_abstract</item>
    </style>

    <style name="AppTheme.Small" parent="AppTheme.NotFullscreen">
        <item name="android:textAppearanceSmall">@style/AppTheme.Small.Text</item>
        <item name="android:textAppearance">@style/AppTheme.Small.Text</item>
        <item name="buttonStyle">@style/AppTheme.Small.Button</item>
        <item name="android:buttonStyle">@style/AppTheme.Small.Button</item>
    </style>

    <style name="AppTheme.Small.Text" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textSmall</item>
    </style>

    <style name="AppTheme.Small.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme.CenterTitle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:minHeight">@dimen/buttonHeight</item>
        <item name="android:padding">@dimen/largeMargin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">@dimen/panelElevation</item>
    </style>

</resources>

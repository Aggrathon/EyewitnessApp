<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/margin"
    android:layout_margin="@dimen/margin"
    tools:context="aggrathon.eyewitnessapp.MainActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin"
        style="@style/AppTheme.Panel">

        <ImageButton
            android:id="@+id/finButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:adjustViewBounds="true"
            android:background="@android:color/background_light"
            android:contentDescription="@string/finnish"
            android:cropToPadding="false"
            android:onClick="onLangFinnish"
            android:scaleType="fitCenter"
            android:layout_margin="@dimen/margin"
            android:tintMode="screen"
            app:srcCompat="@drawable/flag_of_finland"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:text="@string/finnish"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin"
        style="@style/AppTheme.Panel">

        <ImageButton
            android:id="@+id/sweButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:adjustViewBounds="true"
            android:background="@android:color/background_light"
            android:contentDescription="@string/swedish"
            android:cropToPadding="false"
            android:onClick="onLangSwedish"
            android:scaleType="fitCenter"
            android:layout_margin="@dimen/margin"
            app:srcCompat="@drawable/flag_of_sweden"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:text="@string/swedish"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        style="@style/AppTheme.Panel">

        <ImageButton
            android:id="@+id/engButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:adjustViewBounds="true"
            android:contentDescription="@string/english"
            android:cropToPadding="false"
            android:onClick="onLangEnglish"
            android:scaleType="fitCenter"
            android:tint="@android:color/darker_gray"
            android:tintMode="screen"
            android:layout_margin="@dimen/margin"
            app:srcCompat="@drawable/flag_of_the_united_kingdom"
            android:background="@android:color/background_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:text="@string/english"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    </LinearLayout>

</LinearLayout>
